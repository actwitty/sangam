#sign-connect-desc
  %h3.desc START ACTING WITTY
/%form
= simple_form_for(:user,@user, :url => user_registration_path, :remote => true, :html => { :id => "signin", :class=>"inputform" }) do |f|
  %ul#data-input
    %li.main-input-list
      = f.input :email ,
              :placeholder => "Email",
              :label => false,
              :input_html => { :class=>'input-deco email-input ',:size=>'30'}
    %li.main-input-list
      = f.input :password , 
              :placeholder => "Password", 
              :label => false,
                :input_html => { :class=>'input-deco password-input ',:size=>'30'}
  #data-input-actions
    %ul#remember-box
      = f.input :remember_me,  :as => :boolean
    /
      %li.remember-list
        %input{:name => "remember-me", :type => "checkbox", :value => "Remember Me"}/
      %li.remember-list
        %label{:for => "remember-me"} Remember Me
    
    %input#user_key{:name => "user[key]", :type => "hidden", :value => ""}/
    %input#user_provider{:name => "user[provider]", :type => "hidden", :value => ""}/
    %input#user_uid{:name => "user[uid]", :type => "hidden", :value => ""}/
  %br/
  #site-connect-buttons
    %input#signinbutton.connect-buttons.actwittysignin{:role => "button", :type => "button", :value => "Sign In"}/
    %input#signupbutton.connect-buttons.actwittysignup{:class => "{button:{label:'SignUp'}}", :role => "button", :type => "button", :value => "Sign Up"}/
    = link_to "Forgot password?    ", new_password_path(:user), :id=>"forgot-password", :class=>"main-page-navlinks"
    = link_to "Unlock Account?     ", new_unlock_path(:user), :class=>"main-page-navlinks"
    = link_to "Resend Confirmation?", new_confirmation_path(:user), :class=>"main-page-navlinks"

