#aw_home_intro_register_inputs
  = simple_form_for(:user,@user, :url => user_registration_path, :remote => true, :html => { :id => "signin", :class=>"inputform" }) do |f|
    /#reg_username_label
    /  %span User Name
    /= f.input :user_name ,
    /          :placeholder => "User Name",
    /          :label => false,
    /          :input_html => { :id=>'aw_register_username'}

    #reg_email_label
      %span Email
    = f.input :email ,
              :placeholder => "Email",
              :label => false,
              :input_html => { :id=>'aw_register_email'}
    #reg_password_label
      %span Password
    = f.input :password , 
              :placeholder => "Password", 
              :label => false,
              :input_html => { :id=>'aw_register_password'}
    = link_to "Resend confirmation ?", new_confirmation_path(:user), :id=>"resend_confirmation"
    %input{:name => "user[key]", :type => "hidden", :value => ""}/
    %input{:name => "user[provider]", :type => "hidden", :value => ""}/
    %input{:name => "user[uid]", :type => "hidden", :value => ""}/
    %input#signupbutton.actwittysignup.button_actwitty.blue.medium.hover_point{:type => "button", :value => "Register !"}/
 
