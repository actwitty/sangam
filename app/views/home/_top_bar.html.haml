.wrapper.col1
  #header
    #top-bar
      #logo
        %a{:href => "http://www.actwitty.com"}
          %img{:height => "50", :src => "/images/alpha/actwitty.png", :width => "120"}
      #searchwrapper
        %form{:action => ""}
          %input.searchbox{:name => "s", :placedholder => "Search", :type => "text"}
      #home_page_nav
        #settings
          %a#p-topbar-home{:href => "/home/show?id=#{@current_user.id}"}
          -if user_signed_in?
            %a.button{:href => "/home/show?id=#{@current_user.id}"}
              %img#profile_header_user_img{:src => "#{@current_user.photo_small_url}"}/
            .options-menu
              %ul
                %li
                  %a{:href => "/home/settings"} settings
                %li
                  %a{:href => "/help/show"} help center
                %li
                  %a{:href => "/users/sign_out"} logout
    %br.clear/
  
  
