#page-wrapper
  #header
    =render :partial => "welcome/logo"
    %input#searchall.home_page_people_search{:type => "text",:placeholder => "Search"}/
    %ul.aw_header_nav
      %li.aw_header_navl
        %a{:href => "/home/show?id=#{current_user.id}"} Home
      %li.aw_header_navl
        %a{:href => "/home/settings"} Settings
      %li.aw_header_navl
        %a{:href => "/users/sign_out"} Logout


  /.home_page_header
  /  .home_page_photo
  /    %p
  /      %img{:alt => "", :src=>"#{@user.photo_small_url}"}
  /    %p
  /      %label.main_title #{@user.full_name}


  
  #settings-page
    /#settings-sign-connect-desc
    %h3#settings-header Settings

  #settings-page-block
    #settings-form
      = simple_form_for @profile,:html => {:multipart => true}, :file_field => {:multiple => true}, :validate => true, :url => home_settings_save_path do |f|
        #settings-input
          %ul#settings-input-list
            %li.settings-fields
              %label.settings-labels First Name
              = f.input :first_name,:label=>false, :placeholder => "First Name", :input_html => { :size=> 30 ,:class=>"settings-input input-deco" }
              /%span.settings-suggest Change your First Name

            %li.settings-fields
              %label.settings-labels Last Name
              = f.input :last_name,:label=>false, :placeholder => "Last Name",:input_html => { :size=> 30, :class=>"settings-input input-deco"  }

            %li.settings-fields
              %label.settings-labels Gender
              = f.input :sex, :label=> false, :collection => ['male','female','other'], :as => :select, :input_html => { :class=>"settings-input-gender input-deco"}

            %li.settings-fields
              %label.settings-labels Date of Birth
              = f.input :dob, :label=> false, :placeholder => "Date of Birth", :as => :string, :input_html=>{ :size => "20", :type => "text", :class=>"settings-input input-deco dob"}

            %li.settings-fields
              %label.settings-labels City
              = f.input :home_location, :label =>false, :placeholder => "City", :input_html => { :size => 20, :class=>"settings-input input-deco" }

            %li.settings-fields
              %label.settings-labels Mobile Number
              = f.input :mobile_number, :label =>false, :placeholder => "Mobile Number", :input_html => { :size => 20, :class=>"settings-input input-deco" }
              /%span.settings-suggest Add your mobile number

            %li.settings-fields
              %label.settings-labels Email
              = f.input :email, :label =>false, :placeholder => "Email", :input_html => { :size => 30, :class=>"settings-input input-deco" }

            %li.settings-fields
              %label.settings-labels Company Name
              = f.input :company_name, :label =>false, :placeholder => "Company Name", :input_html => { :size => 30, :class=>"settings-input input-deco" }

            %li.settings-fields
              %label.settings-labels Address
              = f.text_area :address, :cols=> 30 ,:rows => 5, :label =>false, :class=>"settings-textarea", :placeholder => "Address", :input_html => { :size => 30, :class=>"settings-textarea input-deco" }
              /%span.settings-suggest Add/Change your address

            %li.settings-fields
              %label.settings-labels Website
              = f.input :home_page, :label =>false, :placeholder => "http://", :input_html => { :size => 30, :class=>"settings-input input-deco" }

            %li.settings-fields
              %label.settings-labels Interest
              = f.input :interest, :label =>false, :placeholder => "Interest", :input_html => { :size => 30, :class=>"settings-input input-deco" }

            /%li.settings-fields
            /  %label.settings-labels Latitude
            /  = f.input :current_geo_lat, :label =>false, :placeholder => "Current Latitude", :input_html => { :size => 30, :class=>"settings-input input-deco" }

            /%li.settings-fields
            /  %label.settings-labels Longitude
            /  = f.input :current_geo_long, :label =>false, :placeholder => "Current Longitude", :input_html => { :size => 30, :class=>"settings-input input-deco" }

            %li.settings-fields
              %label.settings-labels Photo
              = f.file_field :profile_photo_l, :label =>false, :class => "settings-input-photo input-deco-photo", :input_html => { :size => 10, :class=>"input-deco" }

              %p= f.submit "Submit"







  /  =render :partial => "welcome/footer"
