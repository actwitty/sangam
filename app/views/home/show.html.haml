%script{:src => "http://maps.google.com/maps/api/js?sensor=true&libraries=places", :type => "text/javascript"}
= javascript_include_tag 'actwitty/home_page_inputs'
/ *******************************************************

/ Here we go with main page

#home_page_wrapper
  .home_page_header

  / Everything coming on the top bar, this is a TODO
  .home_page_signout
    %a{:href => "/users/sign_out"} 
      %img.img_sign_out{:alt => "", :src=>"/images/actwitty/signout.png"}
  %textarea#searchall.home_page_people_search{:placeholder => "Search People"}
  %a.auth_provider{:href => "/users/auth/twitter"}
    %img.img_provider{ :src=>"/images/authentications/twitter_64.png", :alt => "Twitter"}
  %a.auth_provider{:href => "/users/auth/facebook"}
    %img.img_provider{ :src=>"/images/authentications/facebook_64.png", :alt => "Twitter"}
    
  / *********************************************************

  / Top side info for snap and name under it
  .home_page_info
    .home_page_photo
      %p
        %img{:alt => "", :src=>"#{current_user.photo_small_url}"}
      %p
        %label.main_title #{current_user.full_name}
  
  / *********************************************************
  
  %hr
  / Side bars
  .home_page_filters.sidebar.sidebar

    / Activities
    .home_page_activities.filters
      %h4#activities_side_title.sidebar_titles Activities
      %textarea#search_activities{:placeholder => "Activities"}
      %ul#activities_side_list.filter_list.sidebar_lists
    / *************************************************

    / Entities
    .home_page_entities.filters
      %h4#entities_side_title.sidebar_titles Entities
      %textarea#search_entities{:placeholder => "Entities"}
      %ul#entities_side_list.filter_list.sidebar_lists
    / *************************************************
      
    / Locations
    .home_page_locations.filters
      %h4#locations_side_title.sidebar_titles Locations
      %ul#locations_side_list.filter_list.sidebar_lists
    / *************************************************


    / Friends
    .home_page_friends.filters
      %h4.sidebar_titles#friends_side_title Friends
      %textarea#searchfriends{:placeholder => "Search Friends"}
      %ul#friends_list.filter_list.sidebar_lists
    / *************************************************

    / Pending friend requests
    .home_page_pending_friends.filters
      %h4.sidebar_titles#pending_side_title Pending Friends
      %ul#pending_request_list.filter_list.sidebar_lists
    / *************************************************
  / ***********************************************************************

  / Home page main activity generator input boxes
  #home_page_input.main_section
    %fieldset
      %input{:name => "home_page_activity", :type => "text",:placeholder => "Activity"}
      %input{:name => "home_page_entity", :type => "text",:placeholder => "Entity"}
      %input#searchTextField{:name => "home_page_location", :type => "text",:placeholder => "Location"}
      %input#searchTextField1{:size => "50", :type => "hidden"}
      %input#actwitty_generator{:type => "button", :value => "Go!"}
      %input#user_latlng{:name => "latlang", :type => "hidden"}
      #map
  / *************************************************

