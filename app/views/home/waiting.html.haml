#aw_top_bar
  #top_bar_container
    #aw_top_bar_bkg
      #aw_top_bar_box
        %a{:href => "http://www.actwitty.com"}
          %img.awppm_profile_logo{:src => "/images/actwitty/refactor/aw_ppm/common/aw_top_bar.png"}
        -if user_signed_in? && !if_ghost_user?
          %a#awppm_header_user_logout{:href => "/users/sign_out"}
          %a#awppm_header_user_home{:href => "/show?id=#{current_user.id}" }
        -elsif if_ghost_user?
          %a#awppm_header_user_login{:href => "/welcome/new"} login
        #awppm_header_search_edit_box
          %input#aw_js_ppm_header_search_text{:placeholder => "Search", :type => "text"}

#aw_ppm_thanks_main_box
  #aw_ppm_thanks_main_div
    #aw_ppm_thanks_user_info
      #aw_ppm_thanks_user_img
        %a{:href => "/show?id=#{@user.id}"}
          %img{:src => @user.photo_small_url}/
      #aw_ppm_thanks_user_name    
        %a{:href => "/show?id=#{@user.id}"}
          %span.aw_ppm_thanks_user_pretext Thanks for visiting 
          %span #{@user.full_name}
        #aw_ppm_thanks_user_location   
          %span #{@user.current_location}
    #aw_ppm_thanks_message
      %span Oops ! Actwitty has to work on this page. We will soon get back with #{@user.full_name}'s page.       


