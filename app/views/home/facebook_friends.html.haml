= include_javascripts :profile 
= javascript_include_tag 'actwitty/home_page_inputs'




=render :partial => "home/top_bar"


%p#fb_friends Invite Facebook Friends
#invite_friends  
  %h3#empty_check No Facebook friends In your Profile.Invite them by Clicking Above.     
      
 
/Secret cookies
%input#page_owner_id{:name => "user_id_for_this_page", :type => "hidden", :value => "#{@user.id}" }
  -if user_signed_in?
    %input#session_owner_id{:name => "user_id_for_current_login", :type => "hidden", :value => "#{current_user.id}" }
  - else
    %input#session_owner_id{:name => "user_id_for_current_login", :type => "hidden", :value => "-1" }    
  %input#default_page_mode{:name => "default_page_mode", :type => "hidden", :value => "#{@defaul_page_mode}" }

