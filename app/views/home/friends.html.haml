= javascript_include_tag 'redmond/js/jquery-ui-1.8.13.custom.min.js'
= javascript_include_tag 'actwitty/profile'
= javascript_include_tag 'plugins/jcarousel/jquery.jcarousel.min.js'
= javascript_include_tag 'plugins/jquery-autocomplete/lib/jquery.bgiframe.min.js'
= javascript_include_tag 'plugins/jquery-autocomplete/lib/jquery.ajaxQueue.js'
= javascript_include_tag 'plugins/jquery-autocomplete/lib/thickbox-compressed.js'
= javascript_include_tag 'plugins/jquery-autocomplete/jquery.autocomplete.js'
= javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery?


%script{:src => "http://maps.google.com/maps/api/js?sensor=true&libraries=places", :type => "text/javascript"}
= javascript_include_tag 'actwitty/home_page_inputs'
    
/ *******************************************************
/  	$( "#sub_filter_tabs" ).tabs({ collapsible: true, cache: true });

/ Here we go with main page

#home_page_wrapper
  .home_page_header
    %img.aw_header_logo{:src => "/images/rails.png"}/
    /%textarea#searchall.home_page_people_search{:placeholder => "Search People"}
    %input#searchall.home_page_people_search{:type => "text",:placeholder => "Search"}/
    %ul.aw_header_nav
      -if user_signed_in?
        %li.aw_header_navl
          %a{:href => "#"} Home
        %li.aw_header_navl
          %a{:href => "#"} Settings
        %li.aw_header_navl
          %a{:href => "/users/sign_out"} Logout
      -else
        %li.aw_header_navl
          %a{:href => "/"} SignIn

  %hr
  / Everything coming on the top bar, this is a TODO
  /
    .home_page_signout
    %a.auth_provider{:href => "/users/auth/twitter"}
      %img.img_provider{ :src=>"/images/authentications/twitter_64.png", :alt => "Twitter"}
    %a.auth_provider{:href => "/users/auth/facebook"}
      %img.img_provider{ :src=>"/images/authentications/facebook_64.png", :alt => "Twitter"}
    
  / *********************************************************

  / Top side info for snap and name under it

  .home_page_row2
    .home_page_photo
      %p
        %img{:alt => "", :src=>"#{@user.photo_small_url}"}
      %p
        %label.main_title #{@user.full_name}
    / Home page main activity generator input boxes
    #home_page_input.input_box
      %label #
      %input.channel_input_box{:name => "home_page_activity", 
                               :type => "text",
                               :placeholder => "Channel", 
                               :size=>"40"}
      %label @
      %input#searchTextField.place_input_box{:name => "home_page_location", 
                                             :type => "text",
                                             :placeholder => "Place",
                                             :size=>"40"}
      %textarea{:name => "home_page_entity", 
                :type => "text",
                :placeholder => "Whats the story?", 
                :style=>"resize: none;", 
                :cols=>"80", 
                :rows=>"5",
                :maxlength=>"500"}
      %input#searchTextField1{:size => "50", :type => "hidden"}
      %input#actwitty_generator{:type => "button", :value => "Go!"}
      %input#user_latlng{:name => "latlang", :type => "hidden"}
      #map
  / *************************************************
  %hr
  
  .home_page_filter_row
    %ul.aw_header_nav
      %li.aw_header_navl
        %a{:href => "#"} Channels
      %li.aw_header_navl
        %a{:href => "#"} Things
      %li.aw_header_navl
        %a{:href => "#"} Locations
      -if user_signed_in?  && current_user.id == @user.id
        %li.aw_header_navl
          %a{:href => "#"} Friends

  #sub_filter_tabs.ui-tabs.ui-widget.ui-widget-content.ui-corner-all
    %ul.ui-tabs-nav.ui-helper-reset.ui-helper-clearfix.ui-corner-all
      %li#personal_tab_head.ui-state-default.ui-corner-top.ui-tabs-selected.ui-state-active
        %a{:href => "#Personal"} Personal
      -if user_signed_in?  && current_user.id == @user.id
        %li#friend_tab_head.ui-state-default.ui-corner-top
          %a{:href => "#Friends"} Friends
      %li#recent_tab_head.ui-state-default.ui-corner-top
        %a{:href => "#Recent"} Recent
    #Personal.ui-tabs-panel.ui-widget-content.ui-corner-bottom
      %ul#personal_summary.summary_list
      %a#more_personal.more_personal{:href => "#"} More
      %input{:type => "hidden", :id => "personal_count", :value => "0"}/
    -if user_signed_in?  && current_user.id == @user.id
      #Friends.ui-tabs-panel.ui-widget-content.ui-corner-bottom.ui-tabs-hide
        %ul#friends_summary.summary_list
        %a#more_friends.more_friends{:href => "#"} More
        %input{:type => "hidden", :id => "friend_count", :value => "0"}/
    #Recent.ui-tabs-panel.ui-widget-content.ui-corner-bottom.ui-tabs-hide
      %p I am in recent

  %input#page_owner_id{:name => "user_id_for_this_page", :type => "hidden", :value => "#{@user.id}" }






   



