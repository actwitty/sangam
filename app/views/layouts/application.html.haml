!!!
%html
  %head
    %title ActWitty - Channelize, Collaborate, Connect
    = include_stylesheets :defaults
    = include_javascripts :jquery
    = javascript_include_tag :defaults
    = csrf_meta_tag
    %link{:href => "/images/actwitty/favicon.ico", :rel => "icon", :type => "image/ico"}/
  %body
    = yield
    %script{:src => "/javascripts/cal.js", :type => "text/javascript"}
    %script{:src => "/javascripts/jquery.nivo.slider.pack.js", :type => "text/javascript"}
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-24404937-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
