:javascript
  var actgreen_list = #{@actgreen_list.to_json};

.aw_home_top_header
  .aw_home_top_header_content
    %a{:href=>"https://www.actwitty.com"}
      .aw_home_top_header_logo_img
      .aw_home_top_header_logo
    .aw_lpm_top_nav
      %ul
        %li
          %a{:href=>"/about/show.html",:target => "_blank" } Team
        %li
          %a{:href=>"/actwitty",:target => "_blank" } Live 
        %li
          %a{:href=>"http://actwittyblog.tumblr.com/",:target => "_blank" } Blog      
        %li
          %a{:href=>"/actgreen",:target => "_blank" } Eco
        %li
