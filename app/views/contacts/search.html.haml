= form_tag contacts_search_path, :method => 'get' do
  %p 
    = text_field_tag :search, params[:search]
    = submit_tag "Search", :name => nil

    %ul
      - @users.each do |user|
        %li
          %a{:href => "/users/#{user.id}"} 
            %img{:alt => "", :src=>"#{user.photo_small_url}"}
              %br
              #{user.full_name}
